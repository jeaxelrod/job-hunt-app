<h1>Create new Job Listing</h1>

<div class="form">
	<%= form_for(@job, url: user_jobs_path) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.hidden_field :job_group_id, :value => params[:job_group_id]  %>

		<%= f.label :position %>
		<%= f.text_field :position %>
		
		<%= f.label :company %>
		<%= f.text_field :company%>
		
		<%= f.label :location %>
		<%= f.text_field :location %>
		
		<%= f.label :applied %>
		<%= f.check_box :applied %>
		
		<%= f.label :link %>
		<%= f.text_field :link %>
		
		<%= f.label :description %>
		<%= f.text_area :description %>
		
		<%= f.label :notes %>
		<%= f.text_area :notes %>

		<%= f.submit "Create Posting" %>
	<% end %>
</div>
	