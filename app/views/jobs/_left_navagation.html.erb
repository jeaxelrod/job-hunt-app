<div>
  <ul>
	  <% unless @selected_group %>
		  <li><%= link_to 'All', jobs_path, class:'highlighted' %></li>
		<% else %>
	    <li><%= link_to 'All', jobs_path %></li>
		<% end %>
	  <% @groups.each do |group| %>
		  <% if group == @selected_group %>
			  <li><%= link_to group.name, group_jobs_path(group), class:"highlighted" %></li>
			<% else %>
			  <li><%= link_to group.name, group_jobs_path(group)  %></li>
			<% end %>
		<% end %>
	</ul>
</div>