	<div class="content">
		<h1>Jobs</h1>
		<p class="edit-link"><%= link_to "Edit", '#' %></p>
		<ol class="tree">
			<% @job_groups.each do |group| %>
				<li class="jobs">
					<h2 class="job-groups"><%= group.name %></h2>
					<table>
						<thead>
							<tr>
								<% @job_columns.each do |column| %>
									<th><%= column.title %></th>
								<% end %>
							</tr>
						</thead>
						<tbody>
							<% group.jobs.each do |job| %>
								<tr>
									<% job.job_column_contents.each do |column| %>
										<% if column.job_column_id == @job_columns.first.id %>
											<td><%= link_to column.content, '#'; %></td>
										<% else %>
											<td><%= column.content %></td>
										<% end %>
									<% end %> 
									<td class="edit-job"><%= link_to 'Edit', edit_user_job_path( :id => job.id )%></td>
								</tr>
							<% end %>
							<tr>
								<td><%= link_to "New", new_user_job_path(job_group_id: group) %></td>
							<tr>
						</tbody>
					</table>
				</li>
			<% end %>
		</ol>
	</div>