	<div class="content">
		<h1>Jobs</h1>
		<ol class="tree">
			<% @job_groups.each do |group| %>
				<li class="jobs">
					<h2 class="job-groups"><%= group.name %></h2>
					<table>
						<thead>
							<tr>
								<% @job_columns.each do |column| %>
									<th><%= column.titleize %></th>
								<% end %>
							</tr>
						</thead>
						<tbody>
							<% group.jobs.each do |job| %>
								<tr>
									<% @job_columns.each do |attribute| %>
										<% if attribute == "position" %>
											<% if job.send(attribute.to_sym) != "" %>
												<td><%= link_to job.send(attribute.to_sym), user_job_path(:id => job.id) %></td>
											<% else %>
												<td><%= link_to 'Unknown Position', user_job_path(:id => job.id) %></td>
											<% end %>
										<% elsif attribute == @last_column %>
											<td>
												<%= job.send(attribute.to_sym) %>
												<p class="edit-job"><%= link_to 'Edit', edit_user_job_path(:id => job.id)%></p>
											</td>
										<% else %>
											<td><%= job.send(attribute.to_sym) %></td>
										<% end %>
									<% end %>
								</tr>
							<% end %>
							<tr>
								<td><%= link_to "New", new_user_job_path(job_group_id: group) %></td>
							<tr>
						</tbody>
					</table>
				</li>
			<% end %>
		</ol>
	</div>