	<div class="content">
		<h1>Jobs</h1>
		<h2>Edit</h2>
		<ol class="tree">
			<% @job_groups.each do |group| %>
				<li>
					<label for="<%= group.name %>"><%= group.name %></label><input type="checkbox" id="<%= group.name %>" />
					<ol>
						<li class="job-table">
							<table>
								<thead>
									<tr>
										<% @job_columns.each do |column| %>
											<th><%= column.title %></th>
										<% end %>
									</tr>
								</thead>
								<tbody>
									<% group.jobs.each do |job| %>
										<tr>
											<% job.job_column_contents.each do |column| %>
												<th><%= column.content %></th>
											<% end %> 
										</tr>
									<% end %>
								</tbody>
							</table>
						</li>
					</ol>
				</li>
			<% end %>
		</ol>
	</div>